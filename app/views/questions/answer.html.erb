<div class="container my-5">
  <div class="text-center mb-4">
    <h1>Stupid Coaching</h1>
  </div>
  <div class="mb-3">
    <blockquote class="blockquote text-left">
      <p class="mb-3"><%= @question %></p>
      <footer class="blockquote-footer">You</footer>
    </blockquote>
  </div>
  <div class="alert alert-warning">
    <blockquote class="blockquote text-left mb-0">
      <p class="mb-3"><%= @answer %></p>
      <footer class="blockquote-footer">Your coach</footer>
    </blockquote>
  </div>
  <div class="text-left">
    <%= link_to 'Ask a new question', ask_path, class: 'btn btn-link' %>
  </div>
</div>
